@page
@model KhumaloCraft.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="pt-5">
        <div class="container">
            <h2 class="text-center color: #6932D4 !important;">Login</h2>
            <div class="row">
                <div class="col-md-5 mx-auto">
                    <div class="card card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label d-flex flex-row align-items-center">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group pt-1">
                                <input type="submit" class="btn my-btn" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</body>



