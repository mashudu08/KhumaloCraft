@page "{id:int}"
@model KhumaloCraft.Pages.ViewItem

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Product.Image" class="img-fluid" alt="@Model.Product.Name"/>
        </div>
        <div class="col-md-6">
            <h1>@Model.Product.Name</h1>
            <h4>Category: @Model.Product.Category</h4>
            <h4>Price: R @Model.Product.Price.ToString("0.00")</h4>
            <h4>Availability: @Model.Product.Availability</h4>
            <form method="post">
                <input type="hidden" name="ProductId" value="@Model.Product.ProductId"/>
                <button type="submit" asp-page-handler="AddToCart" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    </div>
</div>
